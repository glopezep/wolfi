{
  "name": "wolfi",
  "version": "0.1.0",
  "description": "",
  "main": "dist/wolfi.umd.js",
  "module": "dist/wolfi.esm.js",
  "unpkg": "dist/wolfi.min.js",
  "files": [
    "dist/*",
    "src/*",
    "!src/lib-dev.vue"
  ],
  "scripts": {
    "postinstall": "npm run build",
    "build": "npm run lint:fix && npm run build:unpkg && npm run build:es && npm run build:umd",
    "build:umd": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format umd --file dist/wolfi.umd.js",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es --file dist/wolfi.esm.js",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife --file dist/wolfi.min.js",
    "deploy:github": "storybook-to-ghpages",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
    "start": "start-storybook -p 9001 -c .storybook"
  },
  "dependencies": {
    "simple-xgrid": "^1.2.5"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@commitlint/travis-cli": "^7.3.2",
    "@storybook/addon-options": "^4.1.6",
    "@storybook/storybook-deployer": "^2.8.1",
    "@storybook/vue": "^4.1.6",
    "babel-loader": "^8.0.5",
    "babel-preset-vue": "^2.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.12.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier-eslint": "^8.8.2",
    "rollup": "^0.67.4",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-uglify-es": "0.0.1",
    "rollup-plugin-vue": "^4.3.2",
    "vue": "^2.5.21",
    "vue-loader": "^15.5.1",
    "vue-template-compiler": "^2.5.22"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  }
}
